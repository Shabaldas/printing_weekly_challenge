<div id="registration">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "pb-24" }) do |f| %>
    <div class="container">
      <div class="flex justify-between items-start gap-5 pt-6 pb-10 border-b-[1px] border-darkblue">
        <h5 class="w-full max-w-[51%] text-2xl font-semibold">Forgot your password?</h5>
        <div class="w-full max-w-[49%] flex flex-col gap-[26px]">
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.label :email, class: "label", for: "email" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", type: "email", id: "email", placeholder: "Provide valid email", required: true %>
          <%= f.submit "Send me reset password instructions", class: "button max-w-full", data: { turbo: false } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
